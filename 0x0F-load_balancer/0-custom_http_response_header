
#!/usr/bin/env bash
# set up web_02 to be identical as web_01


# web server tasks
# task 1: install nginx
sudo apt -y update
sudo apt -y upgrade
sudo apt -y install nginx
sudo touch /var/www/html/index.html
echo 'Hello World!' | sudo tee /var/www/html/index.html

# task 3: Redirection
cp /etc/nginx/sites-available/default ~/backups/available_default # backup the file if an error occurs
sudo sed -i '14i\# this is for task 3 in 0x0C-web_server\n\tlocation /redirect_me {\n\t\treturn 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;\n\t}\n\n' /etc/nginx/sites-available/default

# task 4: custom 404 page in my Nginx server
echo "Ceci n'est pas une page" | sudo tee /var/www/html/error_404.html
sudo sed -i '19i\
\terror_page 404 /error_404.html;\n\
' /etc/nginx/sites-available/default


# load balancer tasks
# Add custom header 0x0F-load_balancer TASK 0
sudo sed -i '21s/.*/        add_header X-Served-By $hostname; # Add custom header 0x0F-load_balancer TASK 0/' /etc/nginx/sites-available/default

sudo service nginx restart
