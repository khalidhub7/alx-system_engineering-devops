#!/usr/bin/env bash
# Transfer a file to server
args () {
    ((num = 0))
    for i in $@; do
        ((num++))
    done
    return $num
}
args $@
((num = $?))
if ((num < 3))
then
    echo -e "\e[31;45;7;3mUsage: 0-transfer_file PATH_TO_FILE IP USERNAME PATH_TO_SSH_KEY\e[0m"
    exit 1
else
    scp -o StrictHostKeyChecking=0 -i $4 $1 $3@$2:~/
fi
